{
  "name": "@dynamic-framework/vite-plugin-transform-dynamic-imports",
  "version": "0.2.1",
  "description": "Vite plugin that transforms dynamic imports to use runtime-configurable base paths for widget delivery",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "vite",
    "vite-plugin",
    "dynamic-imports",
    "code-splitting",
    "widgets",
    "modyo",
    "rollup"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dynamic-framework/vite-plugin-transform-dynamic-imports.git"
  },
  "homepage": "https://github.com/dynamic-framework/vite-plugin-transform-dynamic-imports#readme",
  "bugs": {
    "url": "https://github.com/dynamic-framework/vite-plugin-transform-dynamic-imports/issues"
  },
  "license": "MIT",
  "author": "Dynamic Framework Team",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "npm run clear && tsc -p tsconfig.json",
    "clear": "rm -rf dist",
    "commitlint": "commitlint --edit",
    "dev": "tsc -p tsconfig.json --watch",
    "prepare": "husky",
    "prepublishOnly": "npm run build && npm test",
    "test": "vitest run"
  },
  "peerDependencies": {
    "vite": ">=5.0.0"
  },
  "dependencies": {
    "magic-string": "^0.30.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.0",
    "@commitlint/config-conventional": "^20.3.0",
    "@types/node": "^24.10.1",
    "husky": "^9.1.7",
    "typescript": "^5.9.3",
    "vite": "^7.2.6",
    "vitest": "^4.0.15"
  }
}
